@model IEnumerable<Subcategory>
@{
    ViewData["Title"] = "Index";
}

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Subcategory List<span style="font-weight: bold; color: orange;"></span></h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Subcategory" asp-action="Create" asp-route-categoryname="@TempData["CategoryName"]" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Subcategory<span style="font-weight: bold; color: orange;"></span>
            </a>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mx-2">
                Back to Categories List
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Subcategory name
                </th>
                <th>
                    Category
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.CategoryId
                    </td>
                    <td width="10%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Subcategory" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Subcategory" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
